{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules", "dist"]
}
