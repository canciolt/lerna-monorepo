{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["vite/client"],
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist", "/**/*.stories.ts"],
  "include": ["/**/*.ts", "/**/*.tsx", "/**/*.d.ts"]
}