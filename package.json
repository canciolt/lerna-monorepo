{
  "name": "norwegian-design-system",
  "version": "0.0.0",
  "workspaces": [
    "src/components/global",
    "src/components/atoms/*"
  ],
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore ./src",
    "bootstrap": "lerna bootstrap",
    "build:global": "lerna run --scope @**/global build",
    "build:components": "lerna run --scope @**/atom-* --scope @**/molecule-* --scope @**/organism-* build",
    "publish": "build:pro && lerna publish"
  },
  "dependencies": {
    "vue": "^3.2.16"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/vue3": "^6.3.12",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vue/eslint-config-typescript": "^9.0.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.2.0",
    "eslint-plugin-vue": "^8.0.3",
    "lerna": "^4.0.0",
    "merge": "^2.1.1",
    "sass": "^1.43.4",
    "storybook-builder-vite": "^0.1.6",
    "typescript": "^4.4.3",
    "vite": "^2.6.4",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^0.3.0"
  }
}
